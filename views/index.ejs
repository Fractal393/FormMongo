<%- include("partials/header") %>

<style type="text/css">
    .upper {
      margin-top: 150px;
    }

    .heading{
        background-color: teal;
    }
    
  </style>
  
<div class="ui main text container ">
    <div class= "ui center aligned block huge teal compact header heading">Your Daily Read</div>
    <div class="ui top attached segment">
        <div class="ui divided relaxed items">
            <% blogs.forEach(function(blogs){ %>
                <div class="item upper">
                    <div class="ui medium bordered image">
                        <img class="small" src="<%= blogs.image %>">
                    </div>
                    <div class="middle aligned content label">
                        <a class="header" href="/blogs/<%=blogs._id%>"><%=blogs.title%></a>
                       
                        <div class="ui right floated label">Posted on: <%=blogs.created.toDateString()%></div>                        
                        
                        <div class="meta">
                            <span class="cinema">About:</span>
                        </div>
                        
                        <div class="description">
                            <p><%-blogs.body.substr(0, 170)%>...</p>
                        </div>

                        <div class="item">
                        <a href="/blogs/<%=blogs._id%>">
                        <div class="ui animated compact right floated teal button" tabindex="0">
                            <div class="visible content">Read More</div>
                            <div class="hidden content">
                              <i class="right arrow icon"></i>
                            </div>
                        </div>
                        </a>
                        </div>
                        
                        
                    </div>
                </div>
            <% }) %>
        </div>
    </div>


<%- include("partials/footer") %>